@using MVCBookStore.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<MVCBookStore.Models.SACH>

@helper Truncate(string input , int length )
{
    if (input.Length < length)
    { 
        @input
    }    
    else
    { 
        @input.Substring(0,length)<text>...</text>
    }
}



@{
    ViewBag.Title = "Sach";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>QUẢN LÝ THÔNG TIN SÁCH</h2>

<p>
    @Html.ActionLink("THÊM MỚI", "Themmoisach")
</p>
<table class="table" border="1">
    <tr>
        <th style="width:200px"> Tên sách</th>
        <th style="width:100px"> Đơn vị tính</th>
        <th style="width:100px"> Đơn giá</th>
        <th style="width:120px"> Mô tả</th>
        <th style="width:150px"> Ảnh bìa</th>
        <th style="width:100px"> Tên chủ đề</th>
        <th style="width:100px"> Tên NXB</th>
        <th style="width:100px"> Ngày cập nhật</th>
        <th style="width:100px"> SL Bán</th>
        <th style="width:100px"> SL Xem</th>
        <th style="width:100px"> Mới</th>
</tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Tensach)
